# Installing necessary packages 
install.packages("tidyverse")
install.packages("dplyr")
install.packages("janitor")
library(tidyverse)
library(dplyr)
library(janitor)
library(ggplot2)
# loading the dataset 
webtraffic<-read.csv("C:/Users/user/Desktop/Website Visitors -forcasting/3_webtraffic.csv")
# examine the data structure 
head(webtraffic)
View(webtraffic)
colnames(webtraffic) <- "date_visitors"
# Split on space. Use strsplit and then convert to dataframe
split_data <- do.call(rbind, strsplit(as.character(webtraffic$date_visitors), " "))
split_data
# Convert to dataframe. Note: first column is date, second is visitor count
webtraffic_clean <- data.frame(date = as.Date(split_data[,1]), visitors = as.numeric(split_data[,2]))

# Check the head of the cleaned data
print(head(webtraffic_clean))
print(dim(webtraffic_clean))

# Create time series plot
ggplot(webtraffic_clean, aes(x = date, y = visitors)) +
  geom_line() +
  labs(title = "Web Traffic Over Time",
       x = "Date",
       y = "Number of Visitors") +
  theme_minimal() +
  theme(plot.title = element_text(hjust = 0.5))

# Calculate basic statistics
print(summary(webtraffic_clean$visitors))
